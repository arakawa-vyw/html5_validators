  </div>
  <div class="field">
    <%= f.label :birthday %><br>
    <%= f.date_select :birthday %>
  </div>
  <div class="field">
    <%= f.label :prefecture_id %><br>
    <%= f.number_field :prefecture_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
